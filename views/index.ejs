  May Node and Express be with you.


<ul class="eucaImages">
  <% for(var i=0; i<eucaImages.length; i++) {%>
    <li class="eucaImage">
      <span>Image ID: <%= eucaImages[i].imageId %></span>
      <ul class="euca">
        <span><img src="<%= 'http://localhost:3009/'+ eucaImages[i].filename %>" alt="<%= eucaImages[i].diseasetype %>" style="width:120px;height:120px;"> <a href="eucaImages/<%= eucaImages[i].imageId %>">Details</a></span><br>
        <span><%= eucaImages[i].filename %></span><br>
        <span>Disease Type: <%= eucaImages[i].diseasetype %></span><br>
        <span>Stage: <%= eucaImages[i].stage %></span><br>
        <span>Level: <%= eucaImages[i].level %></span><br>
        <span>Submitter: <%= eucaImages[i].submitter %></span><br>
        <span>Submitted Date: <%= eucaImages[i].submit %></span><br>
        <span>Location: <%= eucaImages[i].latitude %>,<%= eucaImages[i].longitude %></span><br>
        <form method="post" action="eucaImages/<%= eucaImages[i].imageId %>/delete">
          <input type="submit" value="Delete">
        </form>

      </ul>
    </li>
  <% } %>
</ul>

</div>
</body>
</html>
